{
  "name": "chord",
  "version": "0.1.0",
  "author": "Din Dmitriy @dmdin",
  "description": "Cutting edge transport framework washing borders between frontend and backend",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/dmdin/chord.git"
  },
  "keywords": ["JSON-RPC", "Client Server", "Transport"],
  "license": "Apache License 2.0",

  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc",
    "format": "prettier --write ./src/**/*.{js,json,html,ts}",
