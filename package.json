    "patch": "npm version patch --no-git-tag-version",
    "publish": "npm publish --no-git-checks"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^6.12.0",
    "eslint": "^8.54.0",
    "eslint-config-prettier": "^9.0.0",
    "prettier": "^3.1.0",
    "reflect-metadata": "^0.1.13",
    "tslib": "^2.6.2",
    "typescript": "^5.3.2"
  }
}
