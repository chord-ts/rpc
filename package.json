{
  "name": "chord-rpc",
  "version": "0.2.4",
  "author": "Din Dmitriy @dmdin",
  "description": "ðŸ’Ž Cutting edge transport framework vanishing borders between frontend and backend",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/dmdin/chord.git"
  },
  "keywords": [
    "JSON-RPC",
    "Client Server",
    "Transport"
  ],
  "license": "Apache License 2.0",
  "files": [
    "dist"
  ],
  "exports": {
    ".": "./dist/index.js",
    "./middlewares/*": "./dist/middlewares/*.js",
    "./middlewares": "./dist/middlewares/index.js",
    "./specs/": "./dist/specs/index.js",
    "./client": "./dist/client.js"
  },
  "types": "./dist/index.d.ts",
  "typesVersions": {
    "*": {
      "middlewares": [
        "./dist/middlewares/index.d.ts"
      ],
      "middlewares/*": [
        "./dist/middlewares/*.d.ts"
      ],
      "specs": [
        "./dist/specs/index.d.ts"
      ]
    }
  },
  "scripts": {
    "build": "tsc && pnpm run minify",
    "minify": "terser --compress --module -o ./dist/client.js --mangle-props builtins -- ./dist/client.js && terser --compress --module -o ./dist/specs/JSONRPC_V2/index.js --mangle-props builtins -- ./dist/specs/JSONRPC_V2/index.js",
    "format": "prettier --write ./src/**/*.{js,json,html,ts}",
    "lint": "eslint --fix ./src",
    "dev": "nodemon --exec npx ts-node src/tests.ts",
    "patch": "pnpm run build && pnpm version patch --no-git-tag-version",
    "update": "pnpm publish --no-git-checks"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^6.12.0",
    "chord-rpc": "^0.1.11",
    "eslint": "^8.54.0",
    "eslint-config-prettier": "^9.0.0",
    "prettier": "^3.1.0",
    "terser": "^5.26.0",
    "tslib": "^2.6.2",
    "typescript": "^5.3.2",
    "unplugin-swc": "^1.4.3"
  },
  "dependencies": {
    "reflect-metadata": "^0.1.13"
  }
}
